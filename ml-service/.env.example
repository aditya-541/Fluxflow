# ML Service Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development

# CORS Configuration
# In development, use * to allow all origins
# In production, specify exact origins (comma-separated)
# Example: https://yourapp.com,https://www.yourapp.com
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Model Configuration (for future ML model settings)
MODEL_VERSION=1.0.0
CONFIDENCE_THRESHOLD=0.75

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=30
